<Window x:Class="Football_Management_System.MatchResultMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nguyễn Tấn Đức - Kết quả trận đấu" Height="350" Width="500"
        WindowStartupLocation="CenterScreen">
    
    <!-- Nền sân bóng -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#2E7D32" Offset="0"/>
                <GradientStop Color="#1B5E20" Offset="0.3"/>
                <GradientStop Color="#388E3C" Offset="0.5"/>
                <GradientStop Color="#1B5E20" Offset="0.7"/>
                <GradientStop Color="#2E7D32" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <!-- Vạch sân bóng -->
        <Border BorderBrush="White" BorderThickness="3" Margin="30" Opacity="0.3"/>
        <Ellipse Width="100" Height="100" Stroke="White" StrokeThickness="2" Opacity="0.3" 
                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Line X1="250" Y1="30" X2="250" Y2="320" Stroke="White" StrokeThickness="2" Opacity="0.3"/>
        
        <!-- Nội dung chính -->
        <Border Background="White" 
                CornerRadius="15" 
                Margin="50"
                Opacity="0.95">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
            </Border.Effect>
            
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                
                <!-- Logo + Tiêu đề -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="⚽" FontSize="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="KẾT QUẢ TRẬN ĐẤU" 
                               FontSize="26" 
                               FontWeight="Bold" 
                               Foreground="#1565C0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="⚽" FontSize="32" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
                
                <TextBlock Text="Nguyễn Tấn Đức" 
                           FontSize="14" 
                           Foreground="#455A64"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>
                
                <Button Content="▶ Start"
                        Width="150"
                        Height="45"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#4CAF50"
                        Foreground="White"
                        Cursor="Hand"
                        Click="BtnMatchResult_Click">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
