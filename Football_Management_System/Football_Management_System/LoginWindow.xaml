<Window x:Class="Football_Management_System.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Nhập" Height="520" Width="620"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#1976D2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Background="White"
                CornerRadius="16"
                Width="440" Height="360"
                HorizontalAlignment="Left" VerticalAlignment="Center"
                Padding="40" Margin="90,0,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="28" ShadowDepth="6" Opacity="0.22"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="ĐĂNG NHẬP"
                           FontSize="24" FontWeight="SemiBold"
                           HorizontalAlignment="Center" Foreground="#111827"
                           Margin="0,0,0,26"/>

                <TextBlock Text="Tên đăng nhập" FontSize="14"
                           Foreground="#6B7280" Margin="0,0,0,8"/>

                <TextBox x:Name="txtUsername" Height="48" FontSize="15"
                         Padding="14,10" Background="#FFFFFF"
                         BorderBrush="#D0D7DE" BorderThickness="1"/>

                <TextBlock Text="Mật khẩu" FontSize="14"
                           Foreground="#6B7280" Margin="0,18,0,8"/>

                <PasswordBox x:Name="txtPassword" Height="48" FontSize="15"
                             Padding="14,10" Background="#FFFFFF"
                             BorderBrush="#D0D7DE" BorderThickness="1"/>

                <TextBlock x:Name="txtError" Foreground="#DC2626"
                           Margin="0,12,0,0" FontSize="13"
                           Visibility="Collapsed" TextWrapping="Wrap"/>

                <Button Content="ĐĂNG NHẬP" Height="49" Margin="0,22,0,0"
                        FontSize="16" Foreground="White" FontWeight="SemiBold"
                        Cursor="Hand" Click="BtnLogin_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#1976D2" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>