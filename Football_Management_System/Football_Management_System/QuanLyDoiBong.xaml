<Window x:Class="Football_Management_System.QuanLyDoiBong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Football_Management_System"
        mc:Ignorable="d"
        Title="F88" Height="600" Width="1100">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#1E88E5" CornerRadius="8" Margin="5">
            <TextBlock Text="QUẢN LÝ ĐỘI BÓNG" Foreground="White" FontSize="22" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0"/>
        </Border>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Thông Tin Đội Bóng -->
            <GroupBox Header="Thông tin đội bóng" Margin="5">
            <StackPanel Margin="10">

                <TextBlock Text="Tên đội"/>
                <TextBox Height="28" Margin="0,5,0,10"/>

                <TextBlock Text="Huấn luyện viên"/>
                <TextBox Height="28" Margin="0,5,0,10"/>

                <TextBlock Text="Logo đội"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                    <Border Width="80"
                    Height="80"
                    BorderBrush="#BDBDBD"
                    BorderThickness="1"
                    CornerRadius="5">
                        <Image Stretch="Uniform"/>
                    </Border>
                    <Button Content="Chọn logo..."
                    Width="100"
                    Height="30"
                    Margin="10,25,0,0"/>
                </StackPanel>

                <TextBlock Text="Giải đấu"/>
                <ComboBox Height="28" Margin="0,5,0,10">
                    <ComboBoxItem Content="V-LEAGUE 1"/>
                    <ComboBoxItem Content="LaLiga"/>
                    <ComboBoxItem Content="Premier League"/>
                    <ComboBoxItem Content="LIGUE 1"/>
                    <ComboBoxItem Content="SERIE A"/>
                    <ComboBoxItem Content="BUNDESLIGA"/>
                    <ComboBoxItem Content="K-LEAGUE 1"/>
                </ComboBox>

                <TextBlock Text="Trạng thái"/>
                <ComboBox Height="28" Margin="0,5,0,20">
                    <ComboBoxItem Content="Đang thi đấu"/>
                    <ComboBoxItem Content="Tạm dừng"/>
                </ComboBox>

                <!-- Button -->
                <WrapPanel Orientation="Horizontal">
                    <Button Content="Thêm" Width="80" Margin="4"/>
                    <Button Content="Sửa" Width="80" Margin="4"/>
                    <Button Content="Xóa" Width="80" Margin="4"/>
                    <Button Content="Lưu" Width="80" Margin="4"/>
                    <Button Content="Hủy" Width="80" Margin="4"/>
                </WrapPanel>

            </StackPanel>
            </GroupBox>

            <!-- Danh Sách Đội Bóng-->
            <GroupBox Header="Danh sách đội bóng" Grid.Column="1" Margin="5">
                <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" Margin="5">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Logo" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Width="40" Height="40"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Tên đội" Width="*"/>
                        <DataGridTextColumn Header="HLV" Width="*"/>
                        <DataGridTextColumn Header="Giải đấu" Width="*"/>
                        <DataGridTextColumn Header="Trạng thái" Width="*"/>
                    </DataGrid.Columns>

                </DataGrid>
            </GroupBox>
        </Grid>

    </Grid>
</Window>
