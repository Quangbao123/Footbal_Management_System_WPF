<Window x:Class="Football_Management_System.QuanLyHuanLuyenVien"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Football_Management_System"
        mc:Ignorable="d"
        Title="QuanLyHuanLuyenVien" Height="450" Width="800">
    <Grid Margin="7">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="#1E88E5" CornerRadius="10">
            <TextBlock Text="QUẢN LÝ HUẤN LUYỆN VIÊN BÓNG ĐÁ"
               Foreground="White"
               FontSize="22"
               FontWeight="Bold"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"/>
        </Border>
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Label Content="Thông Tin Huấn Luyện Viên" FontSize="18" FontWeight="Bold"/>
                <Label Content="Mã HLV" Grid.Row="1"/>
                <TextBox Grid.Row="2" Height="20" Width="300" HorizontalAlignment="Left"/>
                <Label Content="Họ và tên" Grid.Row="3"/>
                <TextBox Grid.Row="4" Height="20" Width="300" HorizontalAlignment="Left"/>
                <Label Content="Ngày sinh" Grid.Row="5"/>
                <DatePicker Grid.Row="6" Height="25" Width="300" HorizontalAlignment="Left"/>
                <Label Content="Quốc tịch" Grid.Row="7"/>
                <ComboBox Grid.Row="8" Height="20" Width="300" HorizontalAlignment="Left">
                    <ComboBoxItem Content="VietNam"/>
                    <ComboBoxItem Content="Japan"/>
                    <ComboBoxItem Content="France"/>
                </ComboBox>
                <Label Content="Đội bóng đang dẫn dắt" Grid.Row="9"/>
                <ComboBox Grid.Row="10" Height="20" Width="300" HorizontalAlignment="Left">
                    <ComboBoxItem Content="Manchester United"/>
                    <ComboBoxItem Content="Manchester City"/>
                </ComboBox>
                <Label Content="Số năm kinh nghiệm" Grid.Row="11"/>
                <TextBox Grid.Row="12" Height="20" Width="300" HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal"   HorizontalAlignment="Center" Grid.Row="13">
                    <Button Content="Thêm" Width="80" Margin="5" Background="#43A047" Foreground="White"/>
                    <Button Content="Sửa" Width="80" Margin="5" Background="#FB8C00" Foreground="White"/>
                    <Button Content="Xóa"  Width="80" Margin="5" Background="#E53935" Foreground="White"/>
                </StackPanel>
            </Grid>
            <Border Grid.Column="1" Background="White" CornerRadius="10">
                <TabControl>
                    <TabItem Header="Danh Sách HLV">
                        <DataGrid AutoGenerateColumns="False"
                          CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Mã HLV" Width="auto"/>
                                <DataGridTextColumn Header="Họ Tên" Width="*"/>
                                <DataGridTextColumn Header="Ngày Sinh" Width="auto"/>
                                <DataGridTextColumn Header="Quốc Tịch" Width="auto"/>
                                <DataGridTextColumn Header="Đội Bóng" Width="auto"/>
                                <DataGridTextColumn Header="Kinh Nghiệm" Width="auto"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Lịch Sử Dẫn Dắt">
                        <DataGrid AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          Margin="5">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="HLV" Width="70"/>
                                <DataGridTextColumn Header="Đội Bóng" Width="*"/>
                                <DataGridTextColumn Header="Từ Năm" Width="auto"/>
                                <DataGridTextColumn Header="Đến Năm" Width="auto"/>
                                <DataGridTextColumn Header="Thành Tích" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                </TabControl>
            </Border>
        </Grid>
    </Grid>
</Window>
